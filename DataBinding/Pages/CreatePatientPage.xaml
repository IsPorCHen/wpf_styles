<Page x:Class="DataBinding.Pages.CreatePatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="CreatePatientPage">
    <StackPanel Style="{StaticResource CenteredStackPanel}">
        <TextBlock Text="Создание пациента" Style="{StaticResource PageTitleTextBlock}"/>
        <Label Content="Фамилия"/>
        <TextBox x:Name="LastNameTextBox"/>
        <Label Content="Имя"/>
        <TextBox x:Name="NameTextBox"/>
        <Label Content="Отчество"/>
        <TextBox x:Name="MiddleNameTextBox"/>
        <Label Content="Дата рождения"/>
        <TextBox x:Name="BirthDatePicker"/>
        <Label Content="Контактный телефон"/>
        <TextBox x:Name="PhoneTextBox"/>
        <WrapPanel>
            <Button Style="{StaticResource AddButton}" Content="Сохранить" Click="SaveButton_Click"/>
            <Button Content="Назад" Click="BackButton_Click"/>
        </WrapPanel>
    </StackPanel>
</Page>