<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="AppBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="AppForeground" Color="#333333"/>

    <SolidColorBrush x:Key="ButtonBackground" Color="#4A6CF7"/>
    <SolidColorBrush x:Key="ButtonHover" Color="#3A5CE5"/>
    <SolidColorBrush x:Key="ButtonPressed" Color="#2A4CD3"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#4A6CF7"/>

    <SolidColorBrush x:Key="AddButtonBackground" Color="#22C55E"/>
    <SolidColorBrush x:Key="AddButtonHover" Color="#16A34A"/>
    <SolidColorBrush x:Key="AddButtonPressed" Color="#15803D"/>

    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#EF4444"/>
    <SolidColorBrush x:Key="DeleteButtonHover" Color="#DC2626"/>
    <SolidColorBrush x:Key="DeleteButtonPressed" Color="#B91C1C"/>

    <SolidColorBrush x:Key="TextBoxBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxBorder" Color="#808083"/>

    <SolidColorBrush x:Key="GroupBoxBorder" Color="#B7B8BC"/>
    <SolidColorBrush x:Key="ListViewBorder" Color="#808083"/>

</ResourceDictionary>